<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	controllerName="com.hcl.AgentDashboard.controller.NewsTechnovasion2018" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page showHeader="false">
		<content>
			<Bar class="customBar">
				<contentLeft>
					<Button icon="sap-icon://navigation-left-arrow" tooltip="Back" press="onPressBack"/>
					<Image
						src="image/EngageLogo.png"
						densityAware="false"
						width="154px"
						height="48px">
						<layoutData>
							<FlexItemData growFactor="1" />
						</layoutData>
					</Image>
				</contentLeft>
				<contentMiddle>
					<Text text="AGENT WORKBENCH" class="barTitle"/>
				</contentMiddle>
				<contentRight>
					<HBox>
						<core:Icon
							src="sap-icon://bell"
							class="iconSize bellImage sapUiTinyMarginEnd"
							color="#000000" >
							<core:layoutData>
								<FlexItemData growFactor="1" />
							</core:layoutData>
						</core:Icon>
						<ImageContent
							src="image/ProfileImage.png"
							description="Profile image"
							class="profileImageContent sapUiTinyMarginBegin sapUiTinyMarginEnd"
							press="pressProfileImage">
						</ImageContent>
						<Text text="Allen Oslon" width="100px" class="sapUiTinyMarginBegin sapUiTinyMarginEnd"/>
						<core:Icon
							id="iconUserMenu"
							src="sap-icon://navigation-down-arrow"
							class="sapUiTinyMarginBegin sapUiTinyMarginTop sapUiTinyMarginEnd"
							color="#000000"
							press="onPressUserMenu">
							<core:layoutData>
								<FlexItemData growFactor="1" />
							</core:layoutData>
						</core:Icon>
					</HBox>
				</contentRight>
			</Bar>
			<VBox alignItems="Center" width="100%">
				<Image
					src="image/News-Technovasion2018.jpg"
					densityAware="false"
					width="800px"
					height="1000px">
					<layoutData>
						<FlexItemData growFactor="1" />
					</layoutData>
				</Image>
			</VBox>
		</content>
	</Page>
</mvc:View>