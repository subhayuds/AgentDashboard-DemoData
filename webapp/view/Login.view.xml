<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.hcl.AgentDashboard.controller.Login"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page showHeader="false">
		<content>
			<VBox alignItems="Center" height="100%">
				<HBox>
					<Image
						src="image/EngageLogo.png"
						densityAware="false"
						width="154px"
						height="48px"
						class="sapUiSmallMarginTop">
						<layoutData>
							<FlexItemData growFactor="1" />
						</layoutData>
					</Image>
				</HBox>
				<HBox class="loginPageHeaderLine1">
					<Text text="AGENT WORKBENCH" class="loginPageHeaderTextLine1"/>
				</HBox>
				<HBox class="loginPageHeaderLine2">
					<Text text="Sign in" class="loginPageHeaderTextLine2"/>
				</HBox>
				<HBox class="sapUiLargeMarginTop">
					<Input
						id="txtUsername"
						type="Text"
						placeholder="Username"
						width="20em"/>
				</HBox>
				<HBox class="sapUiMediumMarginTop">
					<Input
						id="txtPassword"
						type="Password"
						placeholder="Password"
						width="20em"/>
				</HBox>
				<HBox class="sapUiMediumMarginTop">
					<Button 
						id="btnLogin"
						text="Login"
						width="23em"
						press="onPressLogin"></Button>
				</HBox>
				<HBox class="sapUiTinyMarginTop">
					<Link
						id="linkForgotPassword"
						text="Forgot Password?"
						press="handleForgotPassword" />
				</HBox>
			</VBox>
		</content>
	</Page>
</mvc:View>